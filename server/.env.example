# Node.js Express Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Session & Security
SESSION_SECRET=your-super-secret-session-key-here-minimum-24-chars
JWT_SECRET=your-jwt-secret-key-here-minimum-32-chars

# Critical API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Government APIs
SAM_GOV_API_KEY=your-sam-gov-api-key-here
GRANTS_GOV_API_KEY=your-grants-gov-api-key-here

# Commercial APIs
CANDID_API_KEY=your-candid-api-key-here
CANDID_NEWS_KEY=your-candid-news-api-key-here
CANDID_GRANTS_KEY=your-candid-grants-api-key-here
ZYTE_API_KEY=your-zyte-api-key-here

# Foundation Directory
FDO_API_KEY=your-foundation-directory-api-key-here

# GrantWatch
GRANTWATCH_API_KEY=your-grantwatch-api-key-here

# Communication Services
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Open Data APIs
MICHIGAN_SOCRATA_API_KEY=your-michigan-socrata-key-here
GOVINFO_API_KEY=your-govinfo-api-key-here

# Dataset IDs for Socrata APIs
MICHIGAN_GRANTS_DATASET_ID=michigan-grants-dataset-id
MICHIGAN_FUNDING_DATASET_ID=michigan-funding-dataset-id
MICHIGAN_CONTRACTS_DATASET_ID=michigan-contracts-dataset-id

# Redis Configuration (optional, for production caching)
REDIS_URL=redis://localhost:6379

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/grantflow

# Production Settings
TRUST_PROXY=true